<!DOCTYPE html>
<html lang="en">
  <%- include ../../partials/head.ejs %>
  <body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
      <%- include ../../partials/navbar.ejs %> <%- include
      ../../partials/sidebar.ejs %>

      <div class="content-wrapper">
        <section class="content-header">
          <div class="container-fluid">
            <div class="row mb-2">
              <div class="col-sm-6">
                <h1>Nominal</h1>
              </div>
              <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                  <li class="breadcrumb-item"><a href="/">Home</a></li>
                  <li class="breadcrumb-item">
                    <a href="/nominal">Nominal</a>
                  </li>
                  <li class="breadcrumb-item active">Tambah</li>
                </ol>
              </div>
            </div>
          </div>
        </section>

        <section class="content">
          <div class="container-fluid">
            <div class="row">
              <div class="col-12">
                <div class="card card-primary">
                  <div class="card-header">
                    <h3 class="card-title">Form Nominal</h3>
                  </div>

                  <form
                    action="/nominal/edit/<%= nominal._id %>?_method=PUT"
                    method="POST"
                  >
                    <div class="card-body">
                      <div class="form-group">
                        <label>Nama Koin</label>
                        <select
                          class="form-control select2"
                          style="width: 100%"
                          name="coinName"
                          required
                        >
                          <option
                            selected="selected"
                            value="<%- nominal.coinName %>"
                          >
                            <%- nominal.coinName %>
                          </option>
                          <option value="Gold">Gold</option>
                          <option value="Diamond">Diamond</option>
                          <option value="Jewel">Jewel</option>
                        </select>
                      </div>
                      <div class="form-group">
                        <label for="coinQuantity">Jumlah Koin</label>
                        <input
                          type="number"
                          name="coinQuantity"
                          value="<%- nominal.coinQuantity %>"
                          class="form-control"
                          id="coinQuantity"
                          placeholder="Masukan jumlah koin"
                        />
                      </div>
                      <div class="form-group">
                        <label for="price">Harga</label>
                        <input
                          type="number"
                          name="price"
                          value="<%- nominal.price %>"
                          class="form-control"
                          id="price"
                          placeholder="Masukan Harga"
                        />
                      </div>
                    </div>

                    <div class="card-footer">
                      <button type="submit" class="btn btn-primary">
                        Simpan
                      </button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </section>
      </div>

      <%- include ../../partials/footer.ejs %>
    </div>
    <%- include ../../partials/js.ejs %>
  </body>
</html>
